{% block content %}

  <main class="main">
  	<section class="hero-section">
	  	<figure class="hero-bg">
	  		<img class="hero-img-desktop" src="/images/Kevin.png">
	  		<img class="hero-img-tablet" src="/images/Kevin-tablet.png">
